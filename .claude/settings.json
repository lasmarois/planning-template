{
  "additionalDirectories": [],
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(grep:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-context.sh",
            "timeout": 10,
            "statusMessage": "Loading project context..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-compact-handoff.sh",
            "timeout": 10,
            "statusMessage": "Saving handoff context..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-edit-reminder.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/commit-validator.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Check if an active goal is in progress by looking for task_plan.md references in the conversation. If a goal is active, verify that progress.md was mentioned or updated during this turn. If significant work was done but progress.md was not updated, respond with {\"ok\": false, \"reason\": \"Update progress.md before stopping. Log what was done this session.\"}. If no goal is active or progress was updated, respond with {\"ok\": true}. Context: $ARGUMENTS",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
